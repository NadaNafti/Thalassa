{% set saison = hotel.getSaisonPromotionByDate(app.request.session.get('dateDebut')) %}
<li>
    <div class="booking-item">
        <div class="row">
            <div class="col-md-3">
                <div class="booking-item-img-wrap">
                    {% if hotel.photoPrincipal is not null %}
                        <img src="{{ asset(hotel.photoPrincipal.assetPath) }}" alt="Image Alternative text"/>
                    {% else %}
                        <img src="https://placeholdit.imgix.net/~text?txtsize=25&txt=No%20image%20available&w=270&h=195"  alt="Image Alternative text"/>
                    {% endif %}                
                </div>
                </a>
            </div>
            <div class="col-md-6">
                <h4 class="booking-item-title"><a href="{{ path('front_hoteltunisie_details',{'slug':hotel.slug}) }}">{{ hotel|title }}</a></h4>
                <p class="booking-item-address"><i class="fa fa-map-marker"></i> {{ hotel.ville|title }}</p>
                <small class="booking-item-last-booked">{% if saison.type==2 %}
                    <span style='color:red'>{{ saison }} ,</span>
                    {% endif %}
                        Minimum Stay: {{ saison.minStay }}</small>
                    <div class="gap gap-small"></div>
                    <p>{% if  hotel.descriptionCourte|length >200 %}
                        {{ hotel.descriptionCourte|slice(0, 200)|raw }} ...
                        {% else %}
                            {{ hotel.descriptionCourte|raw }}
                            {% endif %}
                            </p>
                        </div>
                        <div class="col-md-3">
                            <div class="booking-item-rating">
                                <ul class="icon-group booking-item-rating-stars">
                                    {{ getStars(hotel.getStars)|raw }}
                                </ul>
                            </div>
                            {{ hotel.shortTripAdvisor|raw }}
                            <div class="gap gap-small"></div>
                            {% if saison.type is null %}
                                <span class="booking-item-price-from"> Sur Demande</span>
                            {% else %}
                                <span class="booking-item-price-from">A partir de</span>     
                                <span class="booking-item-price">
                                    {{ saison.prixDeBase|number_format(0) }} <sup style="font-size:28px">DT</sup></span>
                                {% endif %}
                            <p>{{ saison.arrBase }}</p>
                            <a class="btn btn-primary" href="{{ path('front_hoteltunisie_details',{'slug':hotel.slug}) }}">DÃ©tails</a>
                        </div>
                    </div>
                </div>
            </li>