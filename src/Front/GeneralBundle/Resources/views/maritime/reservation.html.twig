{% extends ":Front:base.html.twig" %}
{% block title %}Maritime{% endblock %}
{% block body %}
    <div id="page_title">
        <div class="container clearfix">
            <div class="page-name">{{ block('title') }}</div>
            <div class="breadcrumb clearfix">
                <a href="{{ path('accueil') }}">Accueil</a>
                <span class="current-page">{{ block('title') }}</span>
            </div>
        </div>
    </div>
    <div id="content_wrapper">
        <div class="container">
            <div class="row clearfix pv-50">
                <div class="col-xs-12 {% if not is_granted('IS_AUTHENTICATED_FULLY') %}col-sm-9 col-md-9{% else %}col-sm-12 col-md-12{% endif %} xs-mb">
                    <div class="white-bg payment-wrapper">
                        {% include ':Front:alert.html.twig' %}
                        <div class="person-information">
                            {{ form_start(form) }}
                            <h3 class="section-title">Information Personnelle</h3>
                            <hr>
                            <div class="row">
                                {{ formulaire.input("col-md-3","Nom & prénom ",form.nomPrenom,true) }}
                                {{ formulaire.input("col-md-3","Email",form.email,true) }}
                                {{ formulaire.input("col-md-3","Cin",form.cin,true) }}
                                {{ formulaire.input("col-md-3","Tel",form.tel,true) }}
                            </div>
                            <h3 class="section-title">Information Maritime</h3>
                            <hr>
                            <div class="row">
                                {{ formulaire.input("col-md-2","Type de voyage",form.typeVoyage,true) }}
                                {{ formulaire.input("col-md-3","Marque de voiture",form.marque,true) }}
                                {{ formulaire.input("col-md-3","Matriculation ",form.matriculation,true) }}
                                {{ formulaire.input("col-md-2","Passagers",form.passagers,true) }}
                                {{ formulaire.input("col-md-2","type Cabine",form.cabine,true) }}
                            </div>
                            <h3 class="section-title">Déstination</h3>
                            <hr>
                            <div class="row">
                                {{ formulaire.input("col-md-4","Lieu départ ",form.lieuDepart,true) }}
                                {{ formulaire.input("col-md-4","Lieu arrivée ",form.lieuArrivee,true) }}
                                {{ formulaire.input("col-md-4","Date départ ",form.dateDepart,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-12","Commentaire",form.commentaire,true) }}
                            </div>
                            <div class="row" id="submitButton">
                                <div class="col-md-8"></div>
                                <div class="col-md-4">
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Validation <i class="fa fa-arrow-circle-right"></i>
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="col-xs-12 col-sm-3 col-md-3">
                        <div class="sidebar hotel-sidebar">
                            <div class="sidebar-item mb-20">
                                <div class="lp-box">
                                    <i class="text-info fa-lock"></i>
                                    <h4>Authentification</h4>

                                    <form action="{{ path("fos_user_security_check") }}" method="post">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                        <input type="hidden" name="_target_path" value="{{ app.request.uri() }}"/>

                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label for="first-name">Identifiant ou Email</label>
                                                    <input type="text" id="username" name="_username"
                                                           required="required" class="form-control"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label for="first-name">Mots de passe</label>
                                                    <input type="password" id="password" name="_password"
                                                           required="required" class="form-control"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <button type="submit" class="btn btn-primary" id="_submit" name="_submit"
                                                    style="float: right;">S'authentifier
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}