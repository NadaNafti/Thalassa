<div class="col-xs-12 col-sm-6 col-md-4">
    <div class="list-item">
        <div class="list-item-image">
            <div class="image-inner">
                <a class="link-image" href="{{ path('front_voyageorganise_details',{'slug':voyage.slug}) }}">
                    {% if voyage.photoPrincipal.assetPath is defined %}
                        <img src="{{ asset(voyage.photoPrincipal.assetPath) }}" alt="" style="width: 270px;height: 195px" />
                    {% else %}
                        <img src="https://placeholdit.imgix.net/~text?txtsize=25&txt=No%20image%20available&w=270&h=195" alt="" />
                    {% endif %}
                    <div class="image-overlay">
                        <div class="overlay-content">
                            <div class="overlay-icon"><i class="icon_link"></i></div>
                        </div>	
                    </div>
                </a>	
            </div>
        </div>
        <div class="list-item-label">
            <h4 class="list-item-title" style="white-space: nowrap">
                <a href="{{ path('front_voyageorganise_details',{'slug':voyage.slug}) }}" class="inverse">
                    {% if  voyage|length >30 %}
                        {{ voyage|slice(0, 30)|raw }} ...
                    {% else %}
                        {{ voyage|raw }}
                    {% endif %}
                    {{ voyage }}
                </a>
            </h4>
            <span class="list-item-location">
                {% if  voyage.destination|length >40 %}
                    {{ voyage.destination|slice(0, 40)|raw }} ...
                {% else %}
                    {{ voyage.destination|raw }}
                {% endif %}
            </span>
            <div class="list-item-meta">
                <span class="rating-static" style="margin-top: -8px;background: inherit">A partir de</span>
                <span class="list-item-review">{{ voyage.prix }} DT</span>
            </div>
            <div class="list-item-details" style="height: 60px;">
                {% if  voyage.descriptionCourte|length >80 %}
                    {{ voyage.descriptionCourte|slice(0, 80)|raw }} ...
                {% else %}
                    {{ voyage.descriptionCourte|raw }}
                {% endif %}
            </div>
            <div class="clear"></div>
            <a href="{{ path('front_voyageorganise_details',{'slug':voyage.slug}) }}" class="btn btn-block">DÃ©tails</a>
        </div>
    </div>
</div>