    {% for periode in voyage.periodes(true) %}
        <h3>{{ periode }}</h3>
        <span>{{ voyage.nbrJour }} jours / {{ voyage.nbrNuit }} nuits</span>
        {% if voyage.type == 1 %}
                <div class="booking-item-flight-details">
                    <div class="booking-item-departure"><i class="fa fa-plane"></i>
                        <p class="booking-item-date" style="padding-top: 12px;">
