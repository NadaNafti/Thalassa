<div class="container col-md-12">
    {% for periode in voyage.periodes(true) %}
        <div class="pagecontainer2 paymentbox grey" style="background: linear-gradient(to bottom, #fcc216 0%,#D89938 100%);margin-top:32px">
            <div class="cpadding1">
                <h3 style="color:white" class="opensans-nobackground">{{ periode }}</h3>
                <span style="color:white" class="opensans bold size14">{{ voyage.nbrJour }} jours / {{ voyage.nbrNuit }} nuits</span><br>
            </div>
            <div style="background-color:black" class="line3"></div>
            <div class="hpadding30 margtop30">
                <div>

                    <div class="wh33percent left size12 bold dark">
                        Départ
                    </div>
                    <div class="wh33percent left center size12 bold dark"></div>
                    <div class="wh33percent right textright size12 bold dark">
                        Retour
                    </div>
                    <div class="clearfix"></div>
                    <div class="wh33percent left">
                        <div style="border-color:black" class="fcircle">
                            <span class="fdeparture"></span>
                        </div>
                    </div>
                    <div class="wh33percent left">
                        {#<div class="fcircle center">
                            <span class="fstop"></span>
                        </div>#}
                    </div>
                    <div class="wh33percent right">
                        <div style="border-color:black" class="fcircle right">
                            <span class="{# farrival #} fdeparture2"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div style="background-color:black" class="fline2px"></div>
                    <div class="wh33percent dark left size14">
                        {% if voyage.type == 1  %}{{ periode.depart|date('d/m/Y') }}{% else %} Au choix {% endif %}{#1:Organise,2:A la carte#}
                    </div>
                    <div class="wh33percent  dark right textright size14">
                        {% if voyage.type == 1  %}{{ periode.retour|date('d/m/Y') }}{% else %} Au choix {% endif %}
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            {% if voyage.type == 2 %}
                <div style="background-color:black" class="line1"></div>
                <div class="hpadding20">
                    <h2 class="opensans slim green2">Programme à la carte</h2>
                </div>
            {% endif %}
            <div style="background-color:black" class="line1"></div>
            {% for pack in periode.packs %}
                <div>
                    <div class="cpadding1">
                        <span class="icon-location-b"></span>

                        <h3 class="kaushan-black boldopensans-nobackground">{{ pack }}</h3>

                        <div class="clearfix"></div>
                    </div>
                    <div class="cpadding1 ">
                        <a href="{{ path('front_voyageorganise_reservation',{'slug':voyage.slug,'pack':pack.id}) }}">
                            {% if pack.assetPath is not null %}
                                <img src="{{ asset(pack.assetPath) }}" alt="" class="left mr20" alt="" style="width: 96px;height: 61px" />
                            {% else %}
                                <img src="https://placeholdit.imgix.net/~text?txtsize=25&txt=No%20image%20available&w=96&h=61" class="left mr20" alt="" />
                            {% endif %}
                        </a>
                            <span href="#" class="dark">
                                {% for hotel in pack.hotels %}
                                    {% if  hotel | length >20 %}<b>{{ hotel | slice(0,20) | raw }}…</b>{% if not loop.last %}<br>{% endif %}
                                {% else %}
                                        <b>{{ hotel }}</b>{% if not loop.last %}<br>{% endif %}
                                    {% endif %}
                                {% endfor %}
                            </span> <br>
                    </div>


                    <div class="clearfix"></div>
                    <div class="cpadding1 ">

                        <br>Tarifs Hébergement
                        <button type="button" class="collapsebtn3-b mt-5" data-toggle="collapse"
                                data-target="#collapse{{ loop.index }}"></button>
                        <!-- Collapse 1 -->

                        <div id="collapse{{ loop.index }}" class="in" style="height: auto;">
                            <div class="left size14">
                                {% for ch in ['single','double','triple','quadruple'] %}
                                    {% if attribute(pack, ch)  %}
                                        Chambre {{ ch }}{% if not loop.last %}<br>{% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <div class="right size14">
                                {% for ch in ['single','double','triple','quadruple'] %}
                                    {% if attribute(pack, ch)  %}
                                        <span class="size12">à partir de</span> {{ attribute(pack, ch~'Vente') | number_format(0,'.','') }}<sup class="sup-super-55">DT</sup>{% if not loop.last %}<br>{% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="clearfix"></div>

                        </div>
                        <!-- End of collapse 1 -->


                        <a href="{{ path('front_voyageorganise_reservation',{'slug':voyage.slug,'pack':pack.id}) }}" class="booknow margtop20 btnmarg">Réservez</a></div>
                </div>
            {% endfor %}


            <br>
        </div>
    {% endfor %}



</div>