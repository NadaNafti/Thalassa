{% set sort=app.request.get('sort') %}
{% set dir=app.request.get('direction') %}
{% set action=path('front_bienetre_sort',{'produits':app.request.get('produits'),'name':app.request.get('name'),}) %}
<div class="sort-by-wrapper">
	<div class="sort-by-text mr-15 xs-mb sm-mb" style="white-space: nowrap;">
		Trier par:
	</div>
	<form method="post" action="{{ action }}">
		<div class="sort-option mr-15 xs-mb sm-mb">
			<input type="hidden" name="sort" value="p.libelle">
			<select class="form-control mySelectBoxClass " name="direction" onchange="submit()">
				<option value="" selected>Nom</option>
				<option value="asc" {% if sort=='p.libelle' and dir=='asc' %}selected {% endif %}>De A à Z</option>
				<option value="desc" {% if sort=='p.libelle' and dir=='desc' %}selected {% endif %}>De Z à A</option>
			</select>
		</div>
	</form>
</div>
<div class="clear mb-30"></div>