<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="list-item">
        <div class="list-item-image">
            <div class="image-inner">
                <a class="link-image" href="{{ path('front_produit_details',{'slug':produit.slug}) }}">
                    {% if produit.photoPrincipal is not null %}
                        <img src="{{ asset(produit.photoPrincipal.assetPath) }}" alt="" style="width: 270px;height: 195px"/>
                    {% else %}
                        <img src="https://placeholdit.imgix.net/~text?txtsize=25&txt=No%20image%20available&w=270&h=195"  alt=""/>
                    {% endif %}
                </a>
            </div>
        </div>
        <div class="list-item-label">
            <div class="left">
                <h4 class="list-item-title">
                    <a href="{{ path('front_produit_details',{'slug':produit.slug}) }}" class="inverse">{{ produit }}</a>
                </h4>
                <span class="list-item-location">
                    {% for centre in produit.centres %}
                        <strong style="color: black">{{ centre.ville }},</strong>
                        {{ centre.libelle }}
                    {% endfor %}
                </span>

                <div class="list-item-details">
                    <div class="clear mt-10"></div>
                    {% if  produit.descriptionCourte|length >80 %}
                        {{ produit.descriptionCourte|slice(0, 80)|raw }} ...
                    {% else %}
                        {{ produit.descriptionCourte|raw }}
                    {% endif %}
                </div>
            </div>
            <div class="right">
                <div class="list-item-meta">
                    <span class="rating-static" style="margin-top: -8px;background: inherit">A partir de</span>
                    <span class="list-item-review" style="color:rosybrown;">{{ produit.APartirDe }} DT</span>
                </div>
                <a href="{{ path('front_produit_details',{'slug':produit.slug}) }}" class="btn">DÃ©tails</a>
            </div>
        </div>

    </div>
</div>