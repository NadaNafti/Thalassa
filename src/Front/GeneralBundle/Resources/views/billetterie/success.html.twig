{% extends ":Front:base.html.twig" %}
{% block body %}
    <div id="content_wrapper">
        <div class="container">
            <div class="row clearfix pv-50">

                <div class="col-xs-12 col-sm-12 col-md-12 xs-mb">
                    <div class="white-bg payment-wrapper">
                        <h2 class="section-title center mb-10">
                            <span class="text-success">Merci</span>, votre réservation est complète!</h2>

                        <p class="center mb-40">Votre numéro de confirmation est
                            <span class="text-success text-bold">{{ reservation.id }}<span></span></p>

                        <h3>Informations Personnelle</h3>

                        <div class="bb2 mb-30"></div>
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <td>Nom Prénom:</td>
                                <td>{{ reservation.nomPrenom }}</td>
                            </tr>
                            <tr>
                                <td>Cin:</td>
                                <td>{{ reservation.cin }}</td>
                            </tr>
                            <tr>
                                <td>Tel:</td>
                                <td>{{ reservation.tel }}</td>
                            </tr>
                            <tr>
                                <td>Adresse:</td>
                                <td>{{ reservation.ville }}, {{ reservation.codePostal }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <hr>
                        <h3>Déstination & Vole</h3>

                        <div class="bb2 mb-30"></div>
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <td>Vole:</td>
                                <td>{{ reservation.showTypeVole }} & {{ reservation.showClasse }}</td>
                            </tr>
                            <tr>
                                <td>Lieu départ & arivée:</td>
                                <td>{{ reservation.lieuDepart }} - {{ reservation.lieuArriver }}</td>
                            </tr>
                            <tr>
                                <td>Date départ & arivée:</td>
                                <td>{{ reservation.dateDepart|date('d/m/Y') }}
                                    - {{ reservation.dateArriver|date('d/m/Y') }}</td>
                            </tr>
                            {% if reservation.commentaire is not null %}
                                <tr>
                                    <td>Commentaire:</td>
                                    <td>{{ reservation.commentaire }}</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                        <hr>
                        <h2>Passagérs : </h2>
                        <table class="table">
                            <thead>
                            <tr>
                                <th class="center">#</th>
                                <th class="center">Age</th>
                                <th class="center">Nom & Prénom</th>
                                <th class="center">Date de naissance</th>
                                <th class="center">Passport</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ligne in reservation.lignes %}
                                <tr>
                                    <td class="center">{{ loop.index }}</td>
                                    <td class="center">{{ ligne.showType }}</td>
                                    <td class="center">{{ ligne.nomPrenom }}</td>
                                    <td class="center">{{ ligne.naissance|date('d/m/Y') }}</td>
                                    <td class="center">{{ ligne.passport }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="bb2 mb-30"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
