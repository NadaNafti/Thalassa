<div class="col-xs-12 col-sm-6 col-md-4">
    <div class="list-item">
        <div class="list-item-image">
            <div class="image-inner">
                <a class="link-image" href="{{ path('front_programme_details',{'slug':programme.slug}) }}">
                    {% if programme.photoPrincipal.assetPath is defined %}
                        <img src="{{ asset(programme.photoPrincipal.assetPath) }}" alt="" style="width: 270px;height: 195px"/>
                    {% else %}
                        <img src="https://placeholdit.imgix.net/~text?txtsize=25&txt=No%20image%20available&w=270&h=195" alt=""/>
                    {% endif %}
                    <div class="image-overlay">
                        <div class="overlay-content">
                            <div class="overlay-icon"><i class="icon_link"></i></div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="list-item-label">
            <h4 class="list-item-title" style="white-space: nowrap">
                <a href="{ path('front_programme_details',{'slug':programme.slug}) }}" class="inverse">{{ programme }}</a>
            </h4>
            {#<span class="list-item-location">{{ programme.theme }}</span>#}
            <div class="list-item-meta">
                <span class="rating-static" style="margin-top: -8px;background: inherit">A partir de</span>
                <span class="list-item-review">{{ programme.prix }} DT</span>
            </div>
            <div class="list-item-details" style="height: 60px;">
                {% if  programme.descriptionCourte|length >80 %}
                    {{ programme.descriptionCourte|slice(0, 80)|raw }} ...
                {% else %}
                    {{ programme.descriptionCourte|raw }}
                {% endif %}
            </div>
            <div class="clear"></div>
            <a href="{{ path('front_programme_details',{'slug':programme.slug}) }}" class="btn btn-block">DÃ©tails</a>
        </div>
    </div>
</div>