<div class="col-xs-12 col-sm-4 col-md-3">
    <div class="sidebar">
        <div class="counting-result">
            <span class="counthotel">{{ programmes.getTotalItemCount }}</span> programme(s) trouvé(s)
        </div>
        <div class="clear" style="height: 5px;"></div>
        <form role="form" {#class="row"#} method="post" action="{{ path('front_programme_liste') }}">
            <div class="search-filter" style="padding: 0px">
                <ul class="search-tabs-content">
                    <li id="search-f-hotels" class="active">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <label for="hotelLocation">Mot clès</label>
                                <input type="text" class="form-control" id="hotelLocation" name="motclesSearch" value="{{ motcle }}">
                            </div>
                        </div>
                        <div class="clear"></div>
                        <div class="clear mb-20"></div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a style="margin-top: 5px;" href="{{ path('front_programme_liste') }}" class="btn btn-danger  btn-xs">Réinitialiser</a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <button type="submit" class="btn btn-primary">Recherche</button>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="clear" style="height: 5px;"></div>
            <div class="another-toggle">
                <h5 {% if app.request.get('themes') != 'all' %}class="active"{% endif %} >Thèmes </h5>
                <div class="another-toggle-inner">
                    <div class="clear mb-10"></div>
                    <fieldset>
                        {% set themesSplit = app.request.get('themes')|split(',') %}
                        {% for theme in themes %}
                            <div class="styled-checkbox">
                                <label>
                                    <input type="checkbox" name="themes_{{ theme.id }}" {% if theme.id in themesSplit %}checked{% endif %} value="{{ theme.id }}">
                                    {{ theme|title }}
                                </label>
                            </div>
                        {% endfor %}
                        <div class="clear"></div>
                        <div class="clear mb-20"></div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <button type="submit" class="btn btn-primary">Recherche</button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>