{% extends ":Back:base.html.twig" %}
{% block title %}Top Programmes & activit√©s{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)">{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        {{ formulaire.select2("col-md-4","Theme",form.theme,true) }}
                        {{ formulaire.input("col-md-4","Photo (370 x 160)",form.file,true) }}
                    </div>
                    {{ formulaire.submit("Enregistrer") }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover" id="sample_1">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Theme</th>
                            <th class="center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for topProgramme in topProgrammes %}
                            <tr>
                                <td class="center">
                                    <img src="{{ asset(topProgramme.assetPath) }}" style="width: 50px;height: 50px"></td>
                                <td>{{ topProgramme.theme }}</td>
                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('front_config_programme_topprogramme',{'id':topProgramme.id})) }}
                                        {{ macros.tableDelete(path('front_config_programme_topprogramme_delete',{'id':topProgramme.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}