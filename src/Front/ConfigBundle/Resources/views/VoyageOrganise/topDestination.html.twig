{% extends ":Back:base.html.twig" %}
{% block title %}Top Destination{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        {{ formulaire.input("col-md-3","Destination",form.destination,true) }}
                        {{ formulaire.input("col-md-2","Ordre",form.ordre,true) }}
                        {{ formulaire.input("col-md-4","Photo (270 x 195)",form.file,true) }}
                    </div>
                    {{ formulaire.submit("Enregistrer") }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Destination</th>
                                <th>Ordre</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for topDestination in topDestinations %}
                                <tr>
                                    <td class="center"><img src="{{ asset(topDestination.assetPath) }}" style="width: 50px;height: 50px"></td>
                                    <td>{{ topDestination.destination }}</td>
                                    <td>{{ topDestination.ordre }}</td>
                                    <td class="TableAction">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            {{ macros.tableEdit(path('front_config_voyageorganise_topdestination',{'id':topDestination.id})) }}
                                            {{ macros.tableDelete(path('front_config_voyageorganise_topdestination_delete',{'id':topDestination.id})) }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}