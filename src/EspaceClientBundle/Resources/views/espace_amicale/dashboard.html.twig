{% extends 'EspaceClientBundle:base_amicale:base.html.twig' %}
{% block body %}
    <div id="dashboard" class="tab-content">
        <div class="tab-pane fade in active">
            <h1 class="no-margin skin-color">Salut {{ app.user.client.nomPrenom }}, Bienvenue à {{ getAgence() }}!</h1>
            <p>Tous vos voyages réservé avec nous apparaissent ici et vous serez en mesure de tout gérer !!!</p>
            <br/>
            <div class="row block">
                <div class="col-sm-6 col-md-4">
                    <a href="{{ path('espace_amicale_reservation_sht') }}">
                        <div class="fact blue">
                            <div class="numbers counters-box">
                                <dl>
                                    <dt class="display-counter" data-value="{{ countReservationSHT }}">0</dt>
                                    <dd>Hotels en tunisie</dd>
                                </dl>
                                <i class="icon soap-icon-hotel"></i>
                            </div>
                            <div class="description">
                                <i class="icon soap-icon-longarrow-right"></i> <span>Voir toutes la liste</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <h2>Amicale</h2>
            {{ form_start(form) }}
            <div class="row form-group">
                <div class="col-md-3">
                    <label>Type</label>
                    {{ form_widget(form.type) }}
                </div>
                <div class="col-md-3">
                    <label>Nom Amicale</label>
                    {{ form_widget(form.libelle) }}
                </div>
                <div class="col-md-3">
                    <label>Tel</label>
                    {{ form_widget(form.tel) }}
                </div>
                <div class="col-md-3">
                    <label>Fax</label>
                    {{ form_widget(form.fax) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Adresse</label>
                    {{ form_widget(form.adresse) }}
                </div>
            </div>
            <div class="form-group">
                <button class="btn-medium">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}