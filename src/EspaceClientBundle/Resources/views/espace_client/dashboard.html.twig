{% extends 'EspaceClientBundle:base:base.html.twig' %}
{% block body %}

    <div id="dashboard" class="tab-content">
        <div class="tab-pane fade in active">
            <h1 class="no-margin skin-color">Salut {{ app.user.client.nomPrenom }}, Bienvenue à {{ getAgence() }}!</h1>
            <p>Tous vos voyages réservé avec nous apparaissent ici et vous serez en mesure de tout gérer !!!</p>
            <br/>
            <div class="row block">
                <div class="col-sm-6 col-md-4">
                    <a href="{{ path('espace_client_reservationSHT') }}">
                        <div class="fact blue">
                            <div class="numbers counters-box">
                                <dl>
                                    <dt class="display-counter" data-value="{{ app.user.client.reservationsSHT|length }}">0</dt>
                                    <dd>Hotels en tunisie</dd>
                                </dl>
                                <i class="icon soap-icon-hotel"></i>
                            </div>
                            <div class="description">
                                <i class="icon soap-icon-longarrow-right"></i> <span>Voir toutes la liste</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-sm-6 col-md-4">
                    <a href="{{ path('espace_client_reservationVO') }}">
                        <div class="fact yellow">
                            <div class="numbers counters-box">
                                <dl>
                                    <dt class="display-counter" data-value="{{ app.user.client.reservationsVO|length }}">0</dt>
                                    <dd>Voyages Organisées</dd>
                                </dl>
                                <i class="icon soap-icon-flight-hotel"></i>
                            </div>
                            <div class="description">
                                <i class="icon soap-icon-longarrow-right"></i> <span>Voir toutes la liste</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-sm-6 col-md-4">
                    <a href="{{ path('espace_client_reservationPR') }}">
                        <div class="fact red">
                            <div class="numbers counters-box">
                                <dl>
                                    <dt class="display-counter" data-value="{{ app.user.client.reservationsPR|length }}">0</dt>
                                    <dd>Programmes & activitées</dd>
                                </dl>
                                <i class="icon soap-icon-carryon"></i>
                            </div>
                            <div class="description">
                                <i class="icon soap-icon-longarrow-right"></i> <span>Voir toutes la liste</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <h2>Mon profil</h2>
            {{ form_start(form) }}
            <div class="row form-group">
                <div class="col-md-4">
                    <label>Nom & Prénom</label>
                    {{ form_widget(form.nomPrenom) }}
                </div>
                <div class="col-md-4">
                    <label>Tel 1</label>
                    {{ form_widget(form.tel1) }}
                </div>
                <div class="col-md-4">
                    <label>Tel 2</label>
                    {{ form_widget(form.tel2) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Adresse</label>
                    {{ form_widget(form.adresse) }}
                </div>
            </div>
            <div class="form-group">
                <button class="btn-medium">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}