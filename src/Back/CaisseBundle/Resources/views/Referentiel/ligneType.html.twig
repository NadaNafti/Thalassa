{% extends ":Back:base.html.twig" %}
{% block title %}Types de mouvements{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        {{ formulaire.input("col-md-3","Code",form.code,true) }}
                        {{ formulaire.input("col-md-6","Libellé",form.libelle,true) }}
                        {{ formulaire.input("col-md-3","Sens Mouvement",form.sensMouvement,true) }}
                    </div>
                    {{ formulaire.submit("Enregistrer") }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Code</th>
                                <th>Libellé</th>
                                <th>Sens mouvement</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for type in types %}
                                <tr>
                                    <td>{{ type.id }}</td>
                                    <td>{{ type.code }}</td>
                                    <td>{{ type.libelle }}</td>
                                    <td>{%if type.sensMouvement == 'D'%} Débit
                                        {%else%} Crédit 
                                        {%endif%}
                                        </td>
                                        <td class="TableAction">
                                            <div class="visible-md visible-lg hidden-sm hidden-xs">
                                                {{ macros.tableDelete(path('back_caisse_referentiel_typeLigne_supprimer',{'id':type.id})) }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                {% endblock %}