{% extends ":Back:base.html.twig" %}
{% block title %}Liste des hotels{% endblock %}
{% block description %}Liste{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="{{ path('list_hotels') }}" >Hotels</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link" href="{{ path('ajout_hotel') }}"> <i class="fa fa-plus"></i> Ajouter un nouveau</a>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover">
                        <thead>
                            <tr>
                                <th class="center">ID</th>
                                <th class="center">Libellé</th>
                                <th class="center">Catégorie</th>
                                <th class="center">Ville</th>
                                <th class="center">Fournisseur</th>
                                <th class="center">Photos</th>
                                <th class="center">Stop sales</th>
                                <th class="center">Remarques</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for hotel in hotels %}
                                <tr class="center">
                                    <td>{{ hotel.id }}</td>
                                    <td>{{ hotel.libelle|title }} {{ getStars(hotel.getStars)|raw }}</td>
                                    <td>{{ hotel.Categorie }}</td>
                                    <td>{{ hotel.ville.pays|upper }} {{ hotel.ville }}</td>
                                    <td>{{ hotel.fournisseur }}</td>
                                    <td>{{ hotel.images|length }}</td>
                                    <td>{{ hotel.stopSales|length }}</td>
                                    <td>
                                        {% if hotel.getEtat == true %}
                                            <a href="{{ path('change_etat',{'id':hotel.id,'etat':0}) }}" title="Cliquez ici pour désactiver l'hôtel" ><span class="label label-sm label-success">Active</span></a>
                                        {% else %} 
                                            <a href="{{ path('change_etat',{'id':hotel.id,'etat':1}) }}" title="Cliquez ici pour activer l'hôtel" ><span class="label label-sm label-danger">Inactive</span></a>
                                        {% endif %}
                                        {% if hotel.ficheTechnique is null %}
                                            <a href="{{ path('fiche_technique',{'id':hotel.id}) }}"><span class="label label-sm label-danger" title="Fiche technique vide">FT vide</span></a>
                                        {% endif %}
                                        {% if hotel.saisonBase is null %}
                                            <a href="{{ path('saison_base',{'id':hotel.id}) }}"><span class="label label-sm label-danger" title="Saison de base vide">SB vide</span></a>
                                        {% endif %}
                                    </td>
                                    <td class="TableAction">
                                        {{ macros.tableEdit(path('modif_hotel',{'id':hotel.id})) }}
                                        {{ macros.tableDelete(path('supprimer_hotel',{'id':hotel.id})) }}
                                        {{ macros.tablePhoto(path('photos_hotel',{'id':hotel.id})) }}
                                        {{ macros.tableStopSales(path('stopsales_hotel',{'id':hotel.id})) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(hotels) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}