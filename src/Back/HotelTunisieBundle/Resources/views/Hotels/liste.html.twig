{% extends ":Back:base.html.twig" %}
{% block title %}Liste des hotels{% endblock %}
{% block description %}Liste{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="{{ path('list_hotels') }}" >Hotels</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link" href="{{ path('ajout_hotel') }}"> <i class="fa fa-plus"></i> Ajouter un nouveau</a>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Libellé</th>
                                <th>Catégorie</th>
                                <th>Ville</th>
                                <th>Fournisseur</th>
                                <th>Photos</th>
                                <th>Stop sales</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for hotel in hotels %}
                                <tr>
                                    <td>{{ hotel.id }}</td>
                                    <td>{{ hotel.libelle|title }} {{ getStars(hotel.getStars)|raw }}</td>
                                    <td>{{ hotel.Categorie }}</td>
                                    <td>{{ hotel.ville.pays|upper }} {{ hotel.ville }}</td>
                                    <td>{{ hotel.fournisseur }}</td>
                                    <td>{{ hotel.images|length }}</td>
                                    <td>{{ hotel.stopSales|length }}</td>
                                    <td class="TableAction">
                                        {{ macros.tableEdit(path('modif_hotel',{'id':hotel.id})) }}
                                        {{ macros.tableDelete(path('supprimer_hotel',{'id':hotel.id})) }}
                                        {{ macros.tablePhoto(path('photos_hotel',{'id':hotel.id})) }}
                                        {{ macros.tableStopSales(path('stopsales_hotel',{'id':hotel.id})) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(hotels) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}