{% extends "BackHotelTunisieBundle:Hotels:liste.html.twig" %}
{% block title %}{{ hotel.libelle }}{% endblock %}
{% block description %}Générer une saison{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="{{ path('modif_hotel',{'id':hotel.id}) }}" >{{ hotel.libelle }}</a>
    </li>
    <li>
        <a href="javascript:void(0)" >Générer une saison</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                {% include 'BackHotelTunisieBundle:Hotels:menu_hotel.html.twig' %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="{{ path('generer_saison',{'id':hotel.id}) }}" method="post" role="form" id="form">
                            {{ form_widget(form._token) }}
                            <div class="row">
                                {{ formulaire.select2("col-md-3","A partir de ",form.saisons,false) }}
                                {{ formulaire.input("col-md-3","Libellé",form.libelle,false) }}
                                {{ formulaire.select2("col-md-3","Type",form.type,false) }}
                            </div>
                            {{ formulaire.submit("Générer") }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}