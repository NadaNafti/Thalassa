{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des suppléments{% endblock %}
{% block description %}Liste{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="{{ path('gestion_supplement') }}" >Suppléments</a>
    </li>
{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link" href="{{ path('ajout_supplement') }}"> <i class="fa fa-plus"></i> Ajouter un nouveau supplément </a>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Libellé</th>
                                <th>Debut</th>
                                <th>Fin</th>
                                <th>Obligatoire</th>
                                <th>Paiement</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for supplement in supplements %}
                                <tr>
                                    <td>{{ supplement.id }}</td>
                                    <td>{{ supplement.libelle }}</td>
                                    <td>{{ supplement.jourDebut }}/{{ supplement.moisDebut }}</td>
                                    <td>{{ supplement.jourFin }}/{{ supplement.moisFin }}</td>
                                    <td>{{ supplement.showObligatoire }}</td>
                                    <td>{{ supplement.showParChambre }} et {{ supplement.showParNuit }}</td>
                                    <td class="TableAction">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            {{ macros.tableEdit(path('modif_supplement',{'id':supplement.id})) }}
                                            {{ macros.tableDelete(path('supprimer_supplement',{'id':supplement.id})) }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end: DYNAMIC TABLE PANEL -->
        </div>
    </div>


{% endblock %}