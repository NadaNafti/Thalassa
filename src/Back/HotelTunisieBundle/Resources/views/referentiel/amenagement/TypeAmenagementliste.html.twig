{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des types aménagements{% endblock %}
{% block description %}Liste{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="{{ path('gestion_type_amenagement') }}" >Types aménagements</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link" href="{{ path('ajout_type_amenagement') }}"> <i class="fa fa-plus"></i> Ajouter un nouveau</a>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Libellé</th>
                                <th>Aménagament</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for typeAmenegament in typeAmenegaments %}
                                <tr>
                                    <td>{{ typeAmenegament.id }}</td>
                                    <td>{{ typeAmenegament.libelle }}</td>
                                    <td>
                                        {% for amenagement in typeAmenegament.amenagements %}
                                            - {{ amenagement.libelle }}<br>
                                        {% endfor %}
                                    </td>
                                    <td class="TableAction">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            {{ macros.tableEdit(path('modif_type_amenagement',{'id':typeAmenegament.id})) }}
                                            {{ macros.tableDelete(path('supprimer_type_amenagement',{'id':typeAmenegament.id})) }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end: DYNAMIC TABLE PANEL -->
        </div>
    </div>


{% endblock %}