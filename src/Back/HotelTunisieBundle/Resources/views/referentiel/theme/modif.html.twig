{% extends "BackHotelTunisieBundle:referentiel/theme:liste.html.twig" %}
{% block title %}Gestion des thèmes{% endblock %}
{% block description %}Modifier un thème{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ theme.libelle }}</a>
    </li>
{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form action="{{ path('modif_theme',{'id':theme.id}) }}" method="post" role="form" id="form">
                        {{ form_widget(form._token) }}
                        <div class="row">
                            {{ formulaire.input("col-md-6","Libellé",form.libelle,true) }}
                        </div>
                        {{ formulaire.submit("Modifier") }}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}