{% extends "BackHotelTunisieBundle:referentiel/chambre:liste.html.twig" %}
{% block title %}Gestion des chambres{% endblock %}
{% block description %}Modifier une chambre{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ chambre.libelle }}</a>
    </li>
{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form action="{{ path('modif_chambre',{'id':chambre.id}) }}" method="post" role="form" id="form">
                        {{ form_widget(form._token) }}
                        <div class="row">
                            {{ formulaire.input("col-md-3","Libell√©",form.libelle,true) }}
                            {{ formulaire.input("col-md-3","Type",form.type,true) }}
                        </div>
                        {{ formulaire.submit("Modifier") }}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}