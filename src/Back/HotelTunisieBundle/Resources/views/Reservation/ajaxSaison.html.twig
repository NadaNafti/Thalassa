                                    </li>
                                </ul>
                            </li>
                            <li>
                                Enfant
                                <ul>
                                    <li>
                                        Prix Achat : {{ supp.getSuppEnfantAchat }} 
                                    </li>
                                    <li>
                                        Prix Vente : {{ supp.getSuppEnfantVente }} 
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        {% if saison.autresReductions|length!=0 %}
