<div class="row" >
    <div class="col-md-12" ><h1 class="center">{{ saison }} <small>{{ hotel }}</small></h1></div>
    <div class="col-md-4" >
        <h3>Arrangements</h3>
        <ul>
            <li>
                <strong>Convention de base (chambre double avec {{ saison.arrBase }})</strong>
                <ul>
                    <li>
                        Prix Achat : {{ saison.prixBaseAchat }} 
                    </li>
                    <li>
                        Prix Vente : {{ saison.prixBaseVente }} 
                    </li>
                </ul>
            </li>
            {% for saisonArr in saison.arrangements  %}
                <li>
                    <strong>{{ saisonArr.arrangement }}</strong>
                    <ul>
                        <li>
                            Prix Achat : {{ saisonArr.getReducSuppAchat }} 
                        </li>
                        <li>
                            Prix Vente : {{ saisonArr.getReducSuppVente }} 
                        </li>
                    </ul>
                </li>
            {% endfor %}
        </ul>
        {% if saison.saisonWeekend is not null %}
            <hr> 
            <h3>Weekend</h3>
            <ul>
                <li>
                    <strong>Tarif weekend</strong>
                    <ul>
                        <li>
                            Prix Achat : {{ saison.saisonWeekend.getReducSuppAchat }} 
                        </li>
                        <li>
                            Prix Vente : {{ saison.saisonWeekend.getReducSuppVente }} 
                        </li>
                    </ul>
                </li>
            </ul>
        {% endif %}

        {% if saison.suppChambres|length!=0 %}
            <hr> 
            <h3>Autres Chambres</h3>
            <ul>
                {% for chambre in saison.suppChambres %}
                    <li>
                        <strong>{{ chambre.chambre }}</strong>
                        <ul>
                            <li>
                                Prix Achat : {{ chambre.getSuppAchat }} 
                            </li>
                            <li>
                                Prix Vente : {{ chambre.getSuppVente }} 
                            </li>
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        {% if saison.vues|length!=0 %}
            <hr> 
            <h3>Supp vues</h3>
            <ul>
                {% for vue in saison.vues %}
                    <li>
                        <strong>{{ vue.vue }}</strong>
                        <ul>
                            <li>
