{% extends ":Back:base.html.twig" %}
{% block title %}Liste des réservations{% endblock %}
{% block description %}Liste{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="{{ path('liste_reservations') }}" >Liste des reservations</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel-body tab-content">
                <form action="{{ path('filtre_reservations') }}" method="post" role="form" id="form">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Etat</label>
                                <select name="etat"  class="form-control ">
                                    <option value="all">Tous les etats</option>
                                    <option value="1" {% if app.request.get('etat')==1%}selected{% endif %} >Enregistrée</option>
                                    <option value="9" {% if app.request.get('etat')==9%}selected{% endif %} >Annulée</option>
                                    <option value="2" {% if app.request.get('etat')==2%}selected{% endif %} >Validée</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Amicales</label>
                                <select name="amicale"  class="form-control ">
                                    <option value="all">Tous le amicales</option>
                                    {% for amicale in amicales %}
                                        <option value="{{ amicale.id }}"  {% if app.request.get('amicale')==amicale.id %}selected{% endif %}>{{ amicale }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <button class="btn btn-green btn-block" type="submit" style="margin-top: 24px;">
                                    Filtre <i class="fa fa-arrow-circle-down"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <a class="btn btn-red btn-block" href="{{ path('liste_reservations') }}" style="margin-top: 24px;">
                                    Reset <i class="fa fa-arrow-circle-left"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nombre de lignes : {{ reservations.getTotalItemCount }}
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover">
                        <thead>
                            <tr>
                                <th class="center">Date</th>
                                <th class="center">Date Réservation</th>
                                <th class="center">Hôtel</th>
                                <th class="center">Client</th>
                                <th class="center">Etat</th>
                                <th class="center">Total</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr class="center">
                                    <td>
                                        {{ reservation.created|date('d/m/Y H:i') }}<br>
                                        <span style="color:red">
                                            {% if reservation.frontOffice %}
                                                Front office
                                            {% else %}
                                                Back office
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {{ reservation.dateDebut|date('d/m/Y') }}<br>
                                        <span style="color:red">{{ reservation.nuitees }} Nuitées</span>
                                    </td>
                                    <td>{{ reservation.hotel|title }}</td>
                                    <td>
                                        {{ reservation.client.nomPrenom|title }}<br>
                                        <span style="color:red">{{ reservation.client.amicale }}</span>
                                    </td>
                                    <td>
                                        {{ reservation.showEtat }}<br>
                                        <span style="color:red">{{ reservation.responsable }}</span>
                                    </td>
                                    <td>
                                        {% if reservation.surDemande %}
                                            <span style="color:red">Sur demande</span>
                                        {% else %}
                                            {{ reservation.getTotal }} DT
                                        {% endif %}
                                    </td>
                                    <td class="TableAction">
                                        {% if reservation.responsable is null %}
                                            {{ macros.boutton(path('prise_en_charge_reservations',{'id':reservation.id}),'fa-user','btn-dark-grey','Prendre en charge cette reservation') }}
                                        {% else %}
                                            {% if reservation.etat==2 %}
                                                {{ macros.boutton(path('voucher_reservation',{'id':reservation.id}),'fa-file','btn-dark-grey','Voucher') }}
                                            {% endif %}
                                            {{ macros.boutton(path('consulter_reservation',{'id':reservation.id}),'fa-eye','btn-dark-grey','Consulter la réservation') }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(reservations) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}