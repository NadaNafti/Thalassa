{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des soins{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Soins</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                {% include 'BackBienEtreBundle:Ref/soin:menu.html.twig' %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.input("col-md-4","Libellé",form.libelle,true) }}
                            {{ formulaire.select2("col-md-4","Centre",form.centre,true) }}
                        </div>
                        <div class="row">
                            {{ formulaire.input("col-md-8","Description",form.description,true) }}
                        </div>
                        {{ formulaire.submit("Enregistrer") }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Libellé</th>
                                <th>Centre</th>
                                <th>Tarifs</th>
                                <th>Images</th>
                                <th class="soin" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for soin in soins %}
                                <tr>
                                    <td>{{ soin.id }}</td>
                                    <td>{{ soin.libelle }}</td>
                                    <td>{{ soin.centre }}</td>
                                    <td><a href="{{ path('back_bienetre_ref_soin_tarif',{'id':soin.id}) }}"> {{ soin.tarifs|length }} tarif(s)</a></td>
                                    <td><a href="{{ path('back_bienetre_ref_soin_photo',{'id':soin.id}) }}"> {{ soin.photos|length }} image(s)</a></td>
                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('back_bienetre_ref_soin',{'id':soin.id})) }}
                                        {{ macros.tableDelete(path('delete_back_bienetre_soin',{'id':soin.id})) }}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
