{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des packs{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Packs</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                {% include 'BackBienEtreBundle:Ref/pack:menu.html.twig' %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.input("col-md-4","Libellé",form.libelle,true) }}
                            {{ formulaire.select2("col-md-4","Centre",form.centre,true) }}
                        </div>
                        <div class="row">
                            {{ formulaire.select2("col-md-4","Soins",form.soins,true) }}
                            {{ formulaire.select2("col-md-4","Cures",form.cures,true) }}
                        </div>
                        <div class="row">
                            {{ formulaire.input("col-md-8","Description",form.description,true) }}
                        </div>
                        {{ formulaire.submit("Enregistrer") }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Libellé</th>
                                <th>Centre</th>
                                <th>Soins</th>
                                <th>Cures</th>
                                <th>Tarifs</th>
                                <th>Images</th>
                                <th class="pack" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pack in packs %}
                                <tr>
                                    <td>{{ pack.id }}</td>
                                    <td>{{ pack.libelle }}</td>
                                    <td>{{ pack.centre }}</td>
                                    <td>
                                        {% for soin in pack.soins %}
                                            - {{ soin.libelle }} <br>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% for cure in pack.cures %}
                                            - {{ cure.libelle }} <br>
                                        {% endfor %}
                                    </td>
                                    <td><a href="{{ path('back_bienetre_ref_pack_tarif',{'id':pack.id}) }}"> {{ pack.tarifs|length }} tarif(s)</a></td>
                                    <td><a href="{{ path('back_bienetre_ref_pack_photo',{'id':pack.id}) }}"> {{ pack.photos|length }} image(s)</a></td>
                                    <td class="TableAction">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            {{ macros.tableEdit(path('back_bienetre_ref_pack',{'id':pack.id})) }}
                                            {{ macros.tableDelete(path('delete_back_bienetre_pack',{'id':pack.id})) }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
