{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des Voyage organisé{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                {% include 'BackVoyageOrganiseBundle:voyageOrganise:menu.html.twig' %}
		<div class="panel panel-default">
		    <div class="panel-body">
			{{ form_start(form) }}
			<div class="row">
			    {{ formulaire.input("col-md-3","Libellé",form.libelle,true) }}
			    {{ formulaire.select2("col-md-3","Destination",form.destination,true) }}
			    {{ formulaire.input("col-md-3","Prix",form.prix,true) }}
			</div>
			<div class="row">
			    {{ formulaire.input("col-md-1","Jours",form.nbrJour,true) }}
			    {{ formulaire.input("col-md-1","Nuits",form.nbrNuit,true) }}
			    {{ formulaire.select2("col-md-5","Pays",form.pays,true) }}
			    {{ formulaire.select2("col-md-5","Themes",form.themes,true) }}
			</div>
			<div class="row">
			    {{ formulaire.input("col-md-12","Description Courte",form.descriptionCourte,true) }}
			</div>
			{{ formulaire.submit("Enregistrer") }}
			{{ form_end(form) }}
		    </div>
		</div>
            </div>
        </div>
    </div>
{% endblock %}