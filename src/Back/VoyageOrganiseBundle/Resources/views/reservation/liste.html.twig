{% extends ":Back:base.html.twig" %}
{% block title %}Liste des réservations{% endblock %}
{% block description %}Liste{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li> 
        <a href="javascipt:void(0)" >Liste des reservations</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nombre de lignes : {{ reservations.getTotalItemCount }}
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover">
                        <thead>
                            <tr>
                                <th class="center" >#</th>
                                <th class="center" >Date Création</th>
                                <th class="center" >Voyage Organisé</th>
                                <th class="center" >Client</th>
                                <th class="center" >Nbr. adultes</th>
                                <th class="center" >Nbr. enfants</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr class="center">
                                    <td>{{ reservation.id }}</td>
                                    <td>
                                        {{ reservation.created|date('d/m/Y H:i') }}<br>
                                        <span style="color:red">
                                            {% if reservation.frontOffice %}
                                                Front office
                                            {% else %}
                                                Back office
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>{{ reservation.voyage|title }}</td>
                                    <td>{{ reservation.client|title }}</td>
                                    <td>{{ reservation.adultes|length }}</td>
                                    <td>{{ reservation.enfants|length }}</td>
                                    <td class="TableAction">

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(reservations) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}