{% extends ":Back:base.html.twig" %}
{% block title %}Liste des fournisseurs{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nombre de fournisseurs : {{ fournisseurs.getTotalItemCount }}
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link" href="{{ path('back_crm_fournisseur_ajouter') }}"> <i class="fa fa-plus"></i> Ajouter un nouveau</a>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover" >
                        <thead>
                            <tr class="center">
                                <th class="center">ID</th>
                                <th class="center">Libellé</th>
                                <th class="center">Type</th>
                                <th class="center">Nom alternatif</th>
                                <th class="center">Matricule fiscale</th>
                                <th class="center">Registre commercial</th>
                                <th class="center" >Code douane</th>
                                <th class="center" >Assujetti à la tva</th>
                                <th class="center" >Forme juridique</th>
                                <th class="center" >Logo</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for fournisseur in fournisseurs %}
                                <tr class="center">
                                    <td>{{ fournisseur.id }}</td>
                                    <td>{{ fournisseur.libelle }}</td>
                                    <td>{{ fournisseur.showTypeFournisseur }}</td>
                                    <td>{{ fournisseur.nomAlternatif }}</td>
                                    <td>{{ fournisseur.matriculeFiscale }}</td>
                                    <td>{{ fournisseur.registreCommercie }}</td>
                                    <td>{{ fournisseur.codeDouane }}</td>
                                    <td>{{ fournisseur.showTva }}</td>
                                    <td>{{ fournisseur.showFormeJuridique }}</td>
                                    <td>
                                        {% if fournisseur.url is not null %}
                                            <img src="{{ asset(asset(fournisseur.getAssetPath)) }}" class="img-responsive"  width="50"  height="50">
                                        {% endif %}
                                    </td>
                                    <td class="TableAction">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            {{ macros.boutton(path('back_crm_fournisseur_details',{'id':fournisseur.id}),'fa-eye','btn-dark-grey','Détails fournisseur') }}
                                            {{ macros.tableEdit(path('back_crm_fournisseur_ajouter',{'id':fournisseur.id})) }}
                                            {{ macros.tableDelete(path('back_crm_fournisseur_delete',{'id':fournisseur.id})) }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(fournisseurs) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
