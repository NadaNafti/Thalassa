{% extends "BackUserBundle:client:liste.html.twig" %}
{% block title %}Détails fournisseur{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)">{{ fournisseur }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 center">
            {% if fournisseur.url is not null %}
                <img src="{{ asset(asset(fournisseur.getAssetPath)) }}" style="position: absolute" class="img-responsive" width="80px" >
            {% endif %}<br>
            <a href="{{ path('back_crm_fournisseur_ajouter',{'id':fournisseur.id}) }}" class="btn btn-success center"> Editer </a>
            <a href="{{ path('back_crm_fournisseur_delete',{'id':fournisseur.id}) }}" class="btn btn-danger center"> Supprimer </a>
            <hr>
        </div>
        <div class="col-md-4">
            <h4>Fournisseur N° {{fournisseur.id}}</h4>
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table  table-full-width table-condensed" >
                        <tbody>
                            <tr><th>Libellé</th> <td>{{ fournisseur.libelle }}</td></tr>
                            <tr><th>Type du tiers</th> <td>{{ fournisseur.showTypeFournisseur }}</td></tr>
                            <tr><th>Nom alternatif</th> <td>{{ fournisseur.nomAlternatif }}</td></tr>
                            <tr><th>Adresse</th> <td>{{ fournisseur.adresse }}</td></tr>
                            <tr><th>Code postal</th> <td>{{ fournisseur.codePostal }}</td></tr>
                            <tr><th>Ville</th> <td>{{ fournisseur.ville }}</td></tr>
                            <tr><th>Gouvernorat</th> <td>{{ fournisseur.gouvernorat }}</td></tr>
                            <tr><th>Pays</th> <td>{{ fournisseur.pays }}</td></tr>
                            <tr><th>Tel pro</th> <td>{{ fournisseur.tel1 }}</td></tr>
                            <tr><th>Tel perso</th> <td>{{ fournisseur.tel2 }}</td></tr>
                            <tr><th>Email</th> <td>{{ fournisseur.email }}</td></tr>
                            <tr><th>Site web</th> <td>{{ fournisseur.siteWeb }}</td></tr>
                            <tr><th>Code douane</th> <td>{{ fournisseur.codeDouane }}</td></tr>
                            <tr><th>Registre commercie</th> <td>{{ fournisseur.registreCommercie }}</td></tr>
                            <tr><th>Matricule fiscale</th> <td>{{ fournisseur.matriculeFiscale }}</td></tr>
                            <tr><th>Assujetti à la tva</th> <td>{{ fournisseur.showTva }}</td></tr>
                            <tr><th>Forme juridique</th> <td>{{ fournisseur.showFormeJuridique }}</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h4>Contacts</h4>
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table  table-full-width table-condensed" >
                        <thead>
                            <tr class="center">
                                <th class="center">Adresse</th>
                                <th class="center">Code postal</th>
                                <th class="center">Ville</th>
                                <th class="center">Gouvernorat</th>
                                <th class="center">Pays</th>
                                <th class="center">Tel Pro</th>
                                <th class="center">Tel Perso</th>
                                <th class="center">Fax</th>
                                <th class="center" >Email</th>
                                <th class="center" ></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contact in fournisseur.contacts %}
                                <tr class="center">
                                    <td>{{ contact.adresse }}</td>
                                    <td>{{ contact.codePostal }}</td>
                                    <td>{{ contact.ville }}</td>
                                    <td>{{ contact.gouvernorat }}</td>
                                    <td>{{ contact.pays }}</td>
                                    <td>{{ contact.telPro }}</td>
                                    <td>{{ contact.telPerso }}</td>
                                    <td>{{ contact.fax }}</td>
                                    <td>{{ contact.email }}</td>
                                    <td class="TableAction">
                                        {{ macros.tableEdit(path('back_crm_fournisseur_contacts',{'id':contact.id})) }}
                                        {{ macros.tableDelete(path('back_crm_fournisseur_contact_delete',{'id':contact.id})) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
