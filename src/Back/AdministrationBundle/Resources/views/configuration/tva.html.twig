{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des TVA{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)">{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.input("col-md-3","Compte Comptable",form.compteComptable,true) }}
                            {{ formulaire.input("col-md-3","Valeur",form.valeur,true) }}
                        </div>
                        {{ formulaire.submit("Enregistrer") }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered  table-full-width table-condensed">
                        <thead>
                        <tr class="center">
                            <th>#</th>
                            <th>Compte Comptable</th>
                            <th>Valeur</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for tva in tvas %}
                            <tr>
                                <td>{{ tva.id }}</td>
                                <td>{{ tva.compteComptable }}</td>
                                <td>{{ tva }}</td>
                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('configuration_tva',{'id':tva.id})) }}
                                        {{ macros.tableDelete(path('configuration_tva_delete',{'id':tva.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}