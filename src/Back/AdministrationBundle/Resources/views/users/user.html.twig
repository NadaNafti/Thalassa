{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des utilisateurs{% endblock %}
{% block description %}
    {% if user.id is null %}Ajouter un utilisateur{% else %}{{ user.username }}{% endif %}
{% endblock %}
{% block topbody %}   
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Ajouter</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover">
                        <thead>
                            <tr>
                                <th class="center">ID</th>
                                <th class="center">username</th>
                                <th class="center">Email</th>
                                <th class="center">Groups</th>
                                <th class="center" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr class="center">
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username}}</td>
                                    <td>{{ user.email}}</td>
                                    <td>
                                        {% for group in user.groups %}
                                            - {{ group.name }}<br>
                                        {% endfor %}
                                    </td>
                                    <td class="TableAction">
                                        {{ macros.tablePassword(path('user',{'id':user.id,'password':'yes'})) }}
                                        {{ macros.tableEdit(path('user',{'id':user.id})) }}
                                        {{ macros.tableDelete(path('delete_user',{'id':user.id})) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}