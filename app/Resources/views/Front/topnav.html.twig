<div class="top-header">
    <div class="clearfix">
        <div class="top-header-inner clearfix">
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('fos_user_registration_register') }}" class="login-modal" style="border-right: none">
                    <i class="icon icon icon-user-add mi"></i>S'inscrire </a>
                <a href="{{ path('fos_user_security_login') }}" class="login-modal">
                    <i class="fa-sign-in mi"></i>Se connecter </a>
            {% else %}
                <a href="{{ path('fos_user_security_logout') }}" class="login-modal" style="border-right: none">
                    <i class="fa-sign-in mi"></i>Se d√©connecter </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('tableaubord') }}" target="_blank" class="login-modal">
                        <i class="fa-lock mi"></i>Back Office </a>
                {% endif %}
                {% if app.user.client is not null %}
                    <a href="{{ path('espace_client_homepage') }}" target="_blank" class="login-modal">
                        <i class="fa-lock mi"></i>Espace client
                    </a>
                    {% if app.user.client.amicale is not null and app.user.client.responsable %}
                        <a href="{{ path('espace_amicale_homepage') }}" target="_blank" class="login-modal">
                            <i class="fa-lock mi"></i>Espace {{ app.user.client.amicale }}
                        </a>
                    {% endif %}
                {% endif %}
                <p class="login-modal" style="  cursor: inherit;">
                    <strong>Bienvenue</strong> {{ app.user }}
                </p>
            {% endif %}
            <div class="clear xss-mb-10"></div>
        </div>
    </div>
</div>