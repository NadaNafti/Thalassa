{% import ":Back:macros.html.twig" as macros %}
{% import ":Back:form.html.twig" as formulaire %}
<!DOCTYPE html>
<!--[if IE 8]><html class="ie8 no-js" lang="en"><![endif]-->
<!--[if IE 9]><html class="ie9 no-js" lang="en"><![endif]-->
<!--[if !IE]><!-->
<html lang="en" class="no-js">
    <head>
        <title>{% block title %}BackOffice{% endblock %}</title>
        <meta charset="utf-8" />
        <!--[if IE]><meta http-equiv='X-UA-Compatible' content="IE=edge,IE=9,IE=8,chrome=1" /><![endif]-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">
        <meta content="" name="description" />
        <meta content="" name="author" />
        {% block stylesheets %}
            {% include ':Back/lib:stylesheet.html.twig' %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset("back-assets/favicon.ico") }}" />
    </head>
    <body>
        {% include ':Back:header.html.twig' %}
        <div class="main-container">
            {% include ':Back:menu.html.twig' %}
            <div class="main-content">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <ol class="breadcrumb">
                                {% block topbody %}
                                    <li>
                                        <i class="clip-home-2"></i>
                                        <a href="{{ path('tableaubord') }}">
                                            Tableau de bord
                                        </a>
                                    </li>
                                {% endblock %}
                            </ol>
                            <div class="page-header">
                                <h1>{{ block('title') }} <small>{% block description %}{% endblock %}</small></h1>
                            </div>
                        </div>
                    </div>
                    {% include ':Back:alert.html.twig' %}
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
    {% include ':Back:footer.html.twig' %}
    {% include ':Back:righsidebar.html.twig' %}
    {% block javascripts %}
        {% include ':Back/lib:javascript.html.twig' %}
    {% endblock %}
</body>
</html>