{% if is_granted('ROLE_CRM') and  octasoft.crm %}
    <li  {% if app.request.getPathInfo|split('/admin/crm')|length > 1 %} class="active open"{% endif %}>
        <a href="javascript:void(0)"><i class="clip-user-6"></i>
            <span class="title">CRM</span><i class="icon-arrow"></i>
            <span class="selected"></span>
        </a>
        <ul class="sub-menu">
            <li {% if app.request.getPathInfo|split('/admin/crm/client')|length > 1 %} class="active open"{% endif %} >
                <a href="javascript:void(0)"><i class="clip-users"></i>
                    <span class="title">Clients</span><i class="icon-arrow"></i>
                </a>
                <ul class="sub-menu">
                    <li {% if app.request.getPathInfo|split('/admin/crm/client/liste')|length > 1 %} class="open"{% endif %}>
                        <a href="{{ path('back_crm_client_liste') }}">
                            <span class="title">Liste</span>
                        </a>
                    </li>
                </ul>
                <ul class="sub-menu">
                    <li {% if app.request.getPathInfo|split('/admin/crm/client/ajouter')|length > 1 %} class="open"{% endif %}>
                        <a href="{{ path('back_crm_client_ajouter') }}">
                            <span class="title">Nouveau Client</span>
                        </a>
                    </li>
                </ul>
                <ul class="sub-menu">
                    <li {% if app.request.getPathInfo|split('/admin/crm/client/contactsClient')|length > 1 %} class="open"{% endif %}>
                        <a href="{{ path('back_crm_client_contacts') }}">
                            <span class="title">Liste contacts</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li {% if app.request.getPathInfo|split('/admin/crm/fournisseur')|length > 1 %} class="active open"{% endif %} >
                <a href="javascript:void(0)"><i class="clip-users"></i>
                    <span class="title">Fournisseurs</span><i class="icon-arrow"></i>
                </a>
                <ul class="sub-menu">
                    <li {% if app.request.getPathInfo|split('/admin/crm/fournisseur/liste')|length > 1 %} class="open"{% endif %}>
                        <a href="{{ path('back_crm_fournisseur_liste') }}">
                            <span class="title">Liste</span>
                        </a>
                    </li>
                </ul>
                <ul class="sub-menu">
                    <li {% if app.request.getPathInfo|split('/admin/crm/fournisseur/ajouter')|length > 1 %} class="open"{% endif %}>
                        <a href="{{ path('back_crm_fournisseur_ajouter') }}">
                            <span class="title">Nouveau fournisseur</span>
                        </a>
                    </li>
                </ul>
                <ul class="sub-menu">
                    <li {% if app.request.getPathInfo|split('/admin/crm/fournisseur/contactsFournisseur')|length > 1 %} class="open"{% endif %}>
                        <a href="{{ path('back_crm_fournisseur_contacts') }}">
                            <span class="title">Liste contacts</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </li>
{% endif %}
