{% if is_granted("ROLE_CAISSE") and octasoft.caisse %}
    <li {% if app.request.getPathInfo|split('/admin/caisse')|length > 1 %} class="active open"{% endif %}>
        <a href="javascript:void(0)"><i class="clip-banknote"></i>
            <span class="title">Caisse</span><i class="icon-arrow"></i>
            <span class="selected"></span>
        </a>
        <ul class="sub-menu">
            {% if is_granted("ROLE_CAISSE_SESSION") %}
                <li {% if app.request.getPathInfo|split('/admin/caisse/session')|length > 1 %} class="active open"{% endif %} >
                    <a href="javascript:void(0)"><i class="fa fa-dollar"></i>
                        <span class="title">Gestion des caisses</span><i class="icon-arrow"></i>
                    </a>
                    <ul class="sub-menu">
                        <li {% if app.request.getPathInfo|split('/admin/caisse/session/liste')|length > 1 %} class="open"{% endif %}>
                            <a href="{{ path('back_caisse_session_liste') }}">
                                <span class="title">Ma session caisse</span>
                            </a>
                        </li>
                    </ul>
                </li>
            {% endif %}
            {% if is_granted("ROLE_CAISSE_REF") %}
                <li {% if app.request.getPathInfo|split('/admin/caisse/referentiel')|length > 1 %} class="active open"{% endif %} >
                    <a href="javascript:void(0)"><i class="clip-list"></i>
                        <span class="title">Référentiel</span><i class="icon-arrow"></i>
                    </a>
                    <ul class="sub-menu">
                        <li {% if app.request.getPathInfo|split('/admin/caisse/referentiel')|length > 1 %} class="open"{% endif %}>
                            <a href="{{ path('back_caisse_referentiel_typeLigne') }}">
                                <span class="title">Types mouvements</span>
                            </a>
                        </li>
                    </ul>
                </li>
            {% endif %}
            {% if is_granted("ROLE_CAISSE_MOUVEMENT") %}
                <li {% if app.request.getPathInfo|split('/admin/caisse/mouvementCaisses')|length > 1 %} class="active open"{% endif %} >
                    <a href="javascript:void(0)"><i class="clip-transfer"></i>
                        <span class="title">Mouvements Caisse</span><i class="icon-arrow"></i>
                    </a>
                    <ul class="sub-menu">
                        <li {% if app.request.getPathInfo|split('/admin/caisse/mouvementCaisses')|length > 1 %} class="open"{% endif %}>
                            <a href="{{ path('back_caisse_mvtCaisses') }}">
                                <span class="title">Liste</span>
                            </a>
                        </li>
                    </ul>
                </li>
            {% endif %}
        </ul>
    </li>
{% endif %}