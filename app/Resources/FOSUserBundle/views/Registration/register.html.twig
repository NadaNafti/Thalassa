{% extends ":Front:base.html.twig" %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div id="content_wrapper">
	<div class="container">
	    <div class="row clearfix pv-50">
		<div class="col-xs-12 col-sm-12 col-md-12 xs-mb">
		    <div class="white-bg payment-wrapper">
			<h3 class="section-title">S'inscrire</h3>
			<div class="bb2 mb-20"></div>
			<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
			    {{ form_widget(form._token) }}
                            <div class="row">
                                {{ formulaire.input("col-md-4","Nom & pr√©nom",form.client.nomPrenom,true) }}
                                {{ formulaire.input("col-md-2","Tel 1",form.client.tel1,true) }}
                                {{ formulaire.input("col-md-2","Tel 2",form.client.tel2,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-8","Addresse",form.client.adresse,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-4","Username",form.username,true) }}
                                {{ formulaire.input("col-md-4","Email",form.email,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-4","",form.plainPassword,true) }}
                            </div>
			    <div class="form-group row">
                                <div class="col-sm-8 col-md-8">
				    <button type="submit" class="btn btn-primary" id="_submit" name="_submit"  style="float: right;">S'inscrire</button>
                                </div>
                            </div>
			</form>
		    </div>
		</div>
	    </div>
	</div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
	label{
	    white-space: nowrap  !important;
	}
    </style>
{% endblock %}
